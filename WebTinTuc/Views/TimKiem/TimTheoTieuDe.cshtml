@model IEnumerable<WebTinTuc.Models.BaiVietModels>

@{
    ViewBag.Title = "Index";
}

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
@using (Html.BeginForm())
{
    <p>
        Title: @Html.TextBox("searchString") <input class="btn btn-info" type="submit" value="Tìm kiếm" />
    </p>
}

<table class="table table-hover jumbotron">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TheLoaiModels.TenTheLoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TieuDe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayDang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoTa)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.NoiDung)
            </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.TrangThaiHienThi)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.LuotXem)
        </th>
        <th>
            <p>Thao tác</p>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TheLoaiModels.TenTheLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TieuDe)
            </td>
            <td>
                <img src="@item.Anh" width="200" height="100" />
                @*@Html.DisplayFor(modelItem => item.Anh)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            @*<td>
                    @Html.Raw(item.NoiDung)
                </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.TrangThaiHienThi)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.LuotXem)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.BaiVietID }) |
                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.BaiVietID }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.BaiVietID })
            </td>
        </tr>
    }

</table>

