@using WebTinTuc.Models;
@model IEnumerable<ApplicationUser>
@{
    ViewBag.Title = "Quản lý thành viên";
    
}
<div class="row">
    <div class="col-sm-12">
        <h2>@ViewBag.Title</h2>
        <hr />
        <table class="table table-borderer">
            <thead>
                <tr>

                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Ngày sinh</th>
                    <th>Địa chỉ</th>
                    <th>SĐT</th>
                    <th>CMND</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td>@item.HoTen</td>
                    <td>@item.Email</td>
                    <td>@item.NgaySinh</td>
                    <td>@item.DiaChi</td>
                    <td>@item.SDT</td>
                    <td>@item.CMND</td>
                    @*<td>@(item.Gender == true ? "Nam" : "Nữ")</td>*@

                    <td>
                        @*@Html.ActionLink("Sửa thông tin", "Edit", new { Id = item.Id }, null) |*@
                        @Html.ActionLink("Sửa quyền", "EditRole", new { Id = item.Id }, null) |
                        @Html.ActionLink("Sửa thông tin", "Edit", new { Id = item.Id }, null) |
                        @Html.ActionLink("Xóa", "Delete", new { Id = item.Id }, null)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
