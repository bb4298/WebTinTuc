<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Admin", "Index", "BaiVietModels", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("QL bài viết", "Index", "BaiVietModels")</li>
                    <li>@Html.ActionLink("Tạo bài viết", "Create", "BaiVietModels")</li>
                    <li>@Html.ActionLink("Thể loại", "Index", "TheLoaiModels")</li>
                    <li>@Html.ActionLink("Quản lý quyền", "Index", "ManageRole")</li>
                    <li>@Html.ActionLink("Quản lý user", "Index", "ManageUser")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()
        <hr />

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <script>
        $(function () {
            $(".datetimepicker").datepicker({ dateFormat: "yy/mm/dd" });

        });
    </script>

    <script src="~/ckeditor/ckeditor.js"></script>


    <script src="~/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="~/ckfinder/ckfinder.js"></script>

    <script>

        CKEDITOR.replace("NoiDung");
        CKFinder.setupCKEditor(null, '/ckfinder');

    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
